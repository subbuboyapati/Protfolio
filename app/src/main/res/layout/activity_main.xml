<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/title"
        android:textSize="18sp"
        android:text="My Nanodegree Apps!" />
    <Button
        android:layout_width="200dp"
        android:text="Spotify Streamer"
        android:gravity="center"
        android:background="#F08C35"
        android:id="@+id/spotify"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="200dp"
        android:text="Scores App"
        android:gravity="center"
        android:background="#F08C35"
        android:id="@+id/scores"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/spotify"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="200dp"
        android:text="Library App"
        android:id="@+id/library"
        android:gravity="center"
        android:background="#F08C35"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/scores"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="200dp"
        android:text="Build it bigger"
        android:gravity="center"
        android:id="@+id/bigger"
        android:background="#F08C35"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/library"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="200dp"
        android:text="XYZ Reader"
        android:gravity="center"
        android:id="@+id/reader"
        android:background="#F08C35"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bigger"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="200dp"
        android:text="capstone:My Own App"
        android:gravity="center"
        android:id="@+id/capstone"
        android:background="#CD0E3E"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/reader"
        android:layout_height="wrap_content" />
</RelativeLayout>
